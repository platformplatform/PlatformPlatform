{
  "$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": false,
    "defaultBranch": "main"
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on"
        }
      }
    }
  },
  "formatter": {
    "indentStyle": "space",
    "lineWidth": 120
  },
  "javascript": {
    "formatter": {
      "trailingCommas": "none"
    },
    "globals": ["React", "ReactNode", "CustomBuildEnv", "RuntimeEnv", "UserInfoEnv"]
  },
  "overrides": [
    {
      "includes": ["**/public/*.html"],
      "linter": {
        "rules": {
          "suspicious": {
            "noAssignInExpressions": "off"
          }
        }
      }
    },
    {
      "includes": ["**/ui/components/Label.tsx"],
      "linter": {
        "rules": {
          "a11y": {
            "noLabelWithoutControl": "off"
          }
        }
      }
    },
    {
      "includes": ["**/ui/components/Calendar.tsx"],
      "linter": {
        "rules": {
          "style": {
            "useNamingConvention": "off"
          }
        }
      }
    }
  ],
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "recommended": true,
        "useImportExtensions": "off",
        "noUndeclaredDependencies": "off",
        "noUndeclaredVariables": "error",
        "noNodejsModules": "off",
        "noUnusedVariables": "error"
      },
      "suspicious": {
        "recommended": true,
        "noReactSpecificProps": "off",
        "noEmptyBlockStatements": "off",
        "noConsole": {
          "level": "error",
          "options": {
            "allow": ["error"]
          }
        }
      },
      "complexity": {
        "recommended": true,
        "noForEach": "off",
        "useSimplifiedLogicExpression": "off"
      },
      "style": {
        "recommended": true,
        "noUnusedTemplateLiteral": "error",
        "useTemplate": "error",
        "noImplicitBoolean": "error",
        "noDefaultExport": "off",
        "useBlockStatements": "error",
        "useConsistentBuiltinInstantiation": "error",
        "useFilenamingConvention": "off",
        "useNamingConvention": {
          "level": "error",
          "options": {
            "strictCase": true,
            "conventions": [
              {
                "selector": {
                  "kind": "objectLiteralProperty"
                },
                "formats": ["PascalCase", "camelCase"]
              }
            ]
          }
        },
        "noNegationElse": "off"
      },
      "nursery": {
        "useSortedClasses": {
          "level": "error",
          "options": {
            "attributes": ["class", "className", "classList"],
            "functions": ["clsx", "cva", "cn", "tv"]
          }
        }
      }
    }
  },
  "files": {
    "includes": [
      "**",
      "!**/dist",
      "!**/obj",
      "!**/environment.d.ts",
      "!**/module-federation-types/*.d.ts",
      "!**/*.Api.json",
      "!**/*.css",
      "!**/*.generated.*",
      "!**/tests/test-results",
      "!**/translations/locale/*.ts"
    ]
  }
}
